= form_for(@project) do |f|
  - if @project.errors.any?
    #error_explanation
      %h2
        = pluralize(@project.errors.count, "error")
        prohibited this project from being saved:
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :lead
    %br/
    = f.text_field :lead
  .field
    - if action_name != "new"
      = link_to "Manage Buttons", project_project_link_buttons_path(@project), :class => "btn btn-primary"
      = link_to "Manage Lists", project_project_content_lists_path(@project), :class => "btn btn-primary"
  .actions
    = f.submit :class => "btn btn-primary btn-large"
